{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "strictFunctionTypes": false,
    "resolveJsonModule": true,
    "jsx": "react",
    "lib": [
      "es6",
      "es2015.promise",
      "es2016.array.include",
      "dom"
    ],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": false,
    "target": "esnext",
    "checkJs": false,
    "module": "commonjs",
    "baseUrl": "./",
    "paths": {
      "@src/*": [
        "src/*/index",
        "src/*"
      ],
      "@components/*": [
        "src/components/*/index",
        "src/components/*"
      ],
      "@hocs/*": [
        "src/hocs/*/index",
        "src/hocs/*"
      ],
      "@modules/*": [
        "src/modules/*/index",
        "src/modules/*"
      ],
      "@pages/*": [
        "src/pages/*/index",
        "src/pages/*"
      ],
      "@utils/*": [
        "src/utils/*/index",
        "src/utils/*"
      ],
      "@assets/*": [
        "src/assets/*/index",
        "src/assets/*"
      ]
    },
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "__tests__/**/*-test.ts",
    "jest.config.js"
  ]
}