{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "strictFunctionTypes": false,
    "jsx": "react",
    "lib": [
      "es6",
      "es2015.promise",
      "es2016.array.include",
      "dom"
    ],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": false,
    "target": "esnext",
    "baseUrl": "./",
    "paths": {
      "@src/*": [
        "src/*/index",
        "src/*"
      ],
      "@modules/*": [
        "src/modules/*/index",
        "src/modules/*"
      ],
      "@pages/*": [
        "src/pages/index",
        "src/pages/*"
      ]
    },
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}